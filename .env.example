# Server Configuration
PORT=3000
NODE_ENV=development

# AI Provider Selection
# Options: grok, gemini, chatgpt
DEFAULT_AI_PROVIDER=grok

# API Keys for AI Providers
GROK_API_KEY=your_grok_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here
CHATGPT_API_KEY=your_chatgpt_api_key_here

# Grok Configuration
GROK_API_URL=https://api.x.ai/v1
GROK_MODEL=grok-4

# Gemini Configuration
GEMINI_API_URL=https://generativelanguage.googleapis.com/v1
GEMINI_MODEL=gemini-2.5-flash

# ChatGPT Configuration
CHATGPT_API_URL=https://api.openai.com/v1
CHATGPT_MODEL=gpt-5

# Chat Configuration
MAX_MESSAGE_LENGTH=1000
MAX_HISTORY_MESSAGES=10
MAX_TOKENS=1000
TEMPERATURE=0.3

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Rate Limiting Configuration
RATE_LIMIT_MIN_DELAY_MS=2000
RATE_LIMIT_BLOCK_DURATION_MS=300000
RATE_LIMIT_MAX_PER_MINUTE=20
RATE_LIMIT_MAX_PER_DAY=10000

# Security Configuration
# Set to true to require API key for all requests
REQUIRE_API_KEY=false
# Comma-separated list of client API keys
CLIENT_API_KEYS=your_client_api_key_1,your_client_api_key_2
# Enable trust proxy for correct IP detection behind reverse proxy
TRUST_PROXY=false
# Comma-separated list of trusted proxy IPs (for X-Forwarded-For parsing)
TRUSTED_PROXIES=
